{% extends '::layout.html.twig' %}

{% block title "Ordenes de Fabricación" %}

{% block content %}
<div id="orden">
	<div class="title title-spacing produccion"><h2>Ordenes de Fabricación</h2></div>        
    <div class="span2">
        {% if form_errors(filterForm) %}
        <div class="response-msg notice iu-corner-all"><span>
            {{ form_errors(filterForm) }}</span>
        </div>
        {% endif %}
        &nbsp;
    </div>
	<div class="portlet form-bg ui-widget ui-widget-content ui-helper-clearfix ui-corner-all buscador"><div class="portlet-header ui-widget-header">Filtros</div>
	    <div class="portlet-content">
            <form class="well" action="{{ path('orden') }}" method="post" {{ form_enctype(filterForm) }}>
			<table id="form-alta">
	   				<tbody> 
	   				   <tr>
	        				<td class="label">{{ form_label(filterForm.id, 'Código Orden') }}</td>
	        				<td class="campo">{{ form_widget(filterForm.id, { 'attr': {'class': 'small numeric'}}) }}</td><td>{{ form_errors(filterForm.id) }}</td>
	      				<tr>
	      				<tr>
	        				<td class="label">{{ form_label(filterForm.cliente, 'Código Cliente') }}</td>
	        				<td class="campo">{{ form_widget(filterForm.cliente, { 'attr': {'class': 'small numeric buscadorid'}}) }}<a rel="prettyPhoto[iframe]" href="{{ path('buscador_cliente', { 'id': '' , 'iframe': 'true', 'width': 650, 'height': 400 }) }}" title="Buscador de Clientes"><img src="{{ asset('images/search.png') }}" /></a></td><td>{{ form_errors(filterForm.cliente) }}</td>
	      				<tr>
	      				<tr>
	        				<td class="label">{{ form_label(filterForm.subcliente, 'Subcliente') }}</td>
	        				<td class="campo">{{ form_widget(filterForm.subcliente) }}</td><td>{{ form_errors(filterForm.subcliente) }}</td>
	      				<tr>
	      				<tr>
	        				<td class="label">{{ form_label(filterForm.fecha, 'Fecha') }}</td>
	        				<td class="campo">{{ form_widget(filterForm.fecha, { 'attr': {'class': 'date small'}}) }}</td><td>{{ form_errors(filterForm.fecha) }}</td>
	      				<tr>
	      				<tr>
	        				<td class="label">{{ form_label(filterForm.estado, 'Estado') }}</td>
	        				<td class="campo">{{ form_widget(filterForm.estado, { 'attr': {'class': ''}}) }}</td><td>{{ form_errors(filterForm.estado) }}</td>
	        			<tr>
	       				<tr>
	        				<td class="label"><label>Fase de Fabricación</label></td>
	        				<td class="campo"><div class="fases-fabricacion">{{ form_label(filterForm.extrusion, 'Extrusion') }}{{ form_widget(filterForm.extrusion, { 'attr': {'class': ''}}) }}
	        								  {{ form_label(filterForm.impresion, 'Impresión') }}{{ form_widget(filterForm.impresion, { 'attr': {'class': ''}}) }}
	        								  {{ form_label(filterForm.corte, 'Corte') }}{{ form_widget(filterForm.corte, { 'attr': {'class': ''}}) }}
	        								  {{ form_label(filterForm.rebobinado, 'Rebobinado') }}{{ form_widget(filterForm.rebobinado, { 'attr': {'class': ''}}) }}</div></td><td>{{ form_errors(filterForm.estado) }}</td>
	      				<tr>
	            	</tbody>
	          </table>
                <p class="botones-buscador">
                    <button type="submit" name="filter_action" value="filter" class="ui-state-default ui-corner-all">Filtrar</button>
                    <button type="submit" name="filter_action" value="reset" class="ui-state-default ui-corner-all">Limpiar</button>   
                </p>
				 {{ form_widget(filterForm._token) }}</form>
		</div>
	</div>
	    
	<div class="btn-nuevo"><a class="btn ui-state-default ui-corner-all" href="{{ path('orden_new') }}"><span class="ui-icon ui-icon-plusthick"></span>Nueva Orden de Fabricación</a></div>

	<div class="clearfix"></div>

 <div class="hastable">
    	<table class="records_list">
    		<thead>
		        <tr>
		            <th width="25">Código Orden</th>
		            <th>Cliente</th>
		            <th>Fecha</th>
		            <th>Subcliente</th>
		            <th>Estado</th>
		            <th width="100">{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
		        </tr>
		    </thead>
		    <tbody>
		    {% for entity in entities %}
		        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
		            <td><a href="{{ path('orden_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
		            <td>{{ entity.cliente }}</td>
		            <td>{{ entity.fecha|date('d.m.Y') }}</td>
		            <td>{{ entity.subcliente }}</td>
		            <td><span class="estadoc estado{{ entity.estado }}">{{ entity.estadoText }}</span></td>
		            <td>
		        		<a href="{{ path('orden_show', { 'id': entity.id }) }}" title="Ver ficha" class="btn_no_text btn ui-state-default ui-corner-all tooltip"><span class="ui-icon ui-icon-search"></span></a>
		        		<a href="{{ path('orden_edit', { 'id': entity.id }) }}" title="Editar elemento" class="btn_no_text btn ui-state-default ui-corner-all tooltip"><span class="ui-icon ui-icon-wrench"></span></a>
		          		<a href="{{ path('orden_print', { 'id': entity.id }) }}" title="Imprimir" class="btn_no_text btn ui-state-default ui-corner-all tooltip"><span class="ui-icon ui-icon-print"></span></a>
		          </td>
		        </tr>
		    {% endfor %}
		    </tbody>
		</table>
    </div>
	<div class="clearfix"></div>
    <div class="span4">
    {{ pagerHtml|raw }}
      <form id="form1" name="form1" method="post" action="{{ path('orden') }}"> 
    <div class="dataTables_length"><label>Mostrar 
    	<select name="cuantos" id="cuantos" onchange="this.form.submit()" size="1">   		
        {% for item in cuantos %}
                <option value="{{ item }}" {% if item == entradas %} selected="selected" {% endif %}>{{ item }}</option>
        {% endfor %}
        </ul>
    	</select></label>
    </div>
    </form>
    </div>
 </div>
   {% endblock %}