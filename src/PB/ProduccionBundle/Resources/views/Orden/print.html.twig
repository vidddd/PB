{% block content %}
<div class="ordenfabricacion">
<div class="tith2"><h2>ORDEN DE FABRICACIÓN - <span class="h2id">{{ entity.id }}</span></h2></div>
	<table>
		<tr><td style="width: 300px;">
			<table id="cliente">
				<tr><td class="etiqueta2">Cliente</td><td colspan="2"><strong>{{ entity.cliente.id}} - {{ entity.cliente }}&nbsp;</strong></td></tr>
				<tr><td class="etiqueta2">Pedido Cliente</td><td><strong>{{ entity.pedidoclienteid }}&nbsp;</strong></td><td>Fecha: <strong>{{ entity.fecha|date('d.m.Y') }}</strong></td></tr>
				<tr><td class="etiqueta2">Subcliente</td><td colspan="2"><strong>{{ entity.subcliente }}&nbsp;</strong></td></tr>
			</table>
		</td><td>
			<table class="tabla1 bordenegro" cellspacing="0" style="width:700px;">
		    	<tr>
		    		<td class="etiqueta">MATERIAL</td><td class="etiqueta">PRODUCTO</td><td class="etiqueta">CANTIDAD</td><td class="etiqueta">ESPESOR</td>
				</tr>
				<tr>
					<td>{{ entity.tipomaterialText }}</td><td>{{ entity.productoText }}</td><td>{{ entity.cantidad }} {{ entity.cantidaduniText }}</td><td>{{ entity.espesor }} {{ entity.espesoruniText }}</td>	
				</tr>
			</table>
	</td></tr>
	</table>
	{% if entity.extrusion %}
	<table>
	  <tr><td style="width:200px;">
		<h3>EXTRUSION</h3>
			<table class="tabla2 bordenegro" cellspacing="0">
				<tr><td>
				<p><i>Color</i></p><p><i>Ancho</i></p><p><i>Galga</i></p><p><i>Plegado</i></p><p><i>Metros</i></p><p><i>Bobinas</i></p><p><i>Peso Teórico</i></p><p><i>Tratado</i></p><p><i>Tipo Tubo</i></p><p><i>Observaciones</i></p>
				</td>
				<td class="width1">
					<p>{{ entity.color }}&nbsp;</p><p>{{ entity.ancho }}&nbsp;</p><p>{{ entity.galga }}&nbsp;</p><p>{{ entity.plegado }}&nbsp;</p><p>{{ entity.metrose }}&nbsp;</p><p>{{ entity.bobinas }}&nbsp;</p><p>{{ entity.pesoteorico }}&nbsp;</p><p>{{ entity.tratadoText }}&nbsp;</p><p>{{ entity.tipotuboText }}&nbsp;</p><p>{{ entity.notasextrusion }}&nbsp;</p><p></p>
				</td>
				</tr>
			</table>
			<table class="tabla5 bordenegro">
				<tr><td class="tabla5eti">Máquina</td><td>&nbsp;</td></tr>
				<tr><td class="tabla5eti">Tiempo</td><td>&nbsp;</td></tr>
			</table>
		</td>
		<td style="width:500px;"><h4>CONTROL DE CALIDAD </h4>
		    	<p class="info">Una inspección por bobina, para bobinas menores de 50 kg, una inspección cada 2 horas</p>
		 <table cellspacing="0" class="tabla3" style="">
	        <tr>
	            <th style="width: 14%;">FECHA</th>
	            <th style="width: 14%;">TURNO</th>
	            <th style="width: 14%;">Nº BOB</th>
	            <th style="width: 14%;">ANCHO</th>
	            <th style="width: 14%;">PESO</th>
	            <th style="width: 15%;">RESULTADO</th>
	            <th style="width: 14%;">FIRMA</th>
	        </tr>
	    </table>
	    {% for i in 0..6 %}
	    <table class="tabla4">
        	<tr>
            	<td style="width: 14%; height:18px;"></td>
            	<td style="width: 14%;"></td>
            	<td style="width: 14%;"></td>
            	<td style="width: 14%;"></td>
            	<td style="width: 14%;"></td>
            	<td style="width: 15%; padding-top:2px;"> <img src="{{ url }}{{ asset('images/nok.png') }}" /></td>
            	<td style="width: 14%;"></td>
        	</tr>
    	</table>
    	{%  endfor %}
	    </td></tr>
	 </table>
	 <table class="total" cellspacing="0">
	 	<tr>
	 		<td class="totaleti">Totales</td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>
	 	</tr>
	 </table><br />
	{% endif %}
	{% if entity.impresion %}
	<table>
		<tr><td style="width:200px;">
		<h3>IMPRESIÓN</h3>
			<table class="tabla2 bordenegro">
				<tr><td>
				<p><i>Kilos</i></p><p><i>Medida</i></p><p><i>Anverso</i></p><p><i>Reverso</i></p><p><i>Colores A</i></p><p><i>Colores R</i></p><p><i>Cliche</i></p><p><i>Carpeta</i></p><p><i>Observaciones</i></p>
				</td>
				<td class="width1">
					<p>{{ entity.kilosimp }}&nbsp;</p><p>{{ entity.medidaimp }}&nbsp;</p><p>{{ entity.anverso }}&nbsp;</p><p>{{ entity.reverso }}&nbsp;</p><p>{{ entity.coloresa }}&nbsp;</p><p>{{ entity.coloresr }}&nbsp;</p><p>{{ entity.clicheText }}&nbsp;</p><p>{{ entity.carpeta }}&nbsp;</p><p>{{ entity.notasimpresion }}&nbsp;</p>
				</td>
				</tr>
			</table>
			<table class="tabla5 bordenegro">
				<tr><td class="tabla5eti">Máquina</td><td>&nbsp;</td></tr>
				<tr><td class="tabla5eti">Tiempo</td><td>&nbsp;</td></tr>
				<tr><td class="tabla5eti">Total</td><td>&nbsp;</td></tr>
			</table>
		</td>
		<td style="width:500px;"><h4>CONTROL DE CALIDAD </h4>
		    	<p class="info">Inspección visual: Inspecciones mínimo cada 2 horas o 1 por bobina.</p>
