			        <tr>
			            <th style="width: 16%;">FECHA</th>
			            <th style="width: 16%;">HORA</th>
			            <th style="width: 16%;">Nº BOBINA</th>
			            <th style="width: 16%;">PESO</th>
			            <th style="width: 17%;">RESULTADO</th>
			            <th style="width: 17%;">FIRMA</th>
			        </tr>
			    </table>
			    {% for i in 0..6 %}
			    <table cellspacing="0" class="tabla4">
		        	<tr>
		            	<td style="width: 16%; height:18px;"></td>
		            	<td style="width: 16%;"></td>
		            	<td style="width: 16%;"></td>
		            	<td style="width: 16%;"></td>
		            	<td style="width: 17%; padding-top:2px;"> <img src="{{ url }}{{ asset('images/nok.png') }}" /></td>
		            	<td style="width: 17%;"></td>
		        	</tr>
		    	</table>
		    	{%  endfor %}
		</td></tr>
	 </table>
	{% endif %}
	{% if entity.corte %}
		<table>
		<tr><td style="width:200px;">
			<h3>CORTE</h3>
				<table class="tabla2 bordenegro">
					<tr><td>
					<p><i>Cantidad</i></p><p><i>Ancho</i></p><p><i>Largo</i></p><p><i>Solapa</i></p><p><i>Bolsa</i></p><p><i>Asa</i></p><!-- <p><i>Paquete</i></p><p><i>Saco</i></p><p><i>Palet</i></p> --><p><i>Observaciones</i></p>
					</td>
					<td class="width1">
						<p>{{ entity.cantidadc }}&nbsp;</p><p>{{ entity.anchoc }}&nbsp;</p><p>{{ entity.largoc }}&nbsp;</p><p>{{ entity.solapa }}&nbsp;</p><p>{{ entity.tipobolsaText }}&nbsp;</p><p>{{ entity.asaText }}&nbsp;</p><!--  <p>{{ entity.paquete }}&nbsp;</p><p>{{ entity.saco }}&nbsp;</p><p>{{ entity.palets }}&nbsp;</p> --><p>{{ entity.notascorte }}&nbsp;</p>
