{% if form_errors(form) %}
          <div class="response-msg notice iu-corner-all">{{ form_errors(form) }}</div>
          {% endif %}
<script>
$(document).ready(function() { 
    $(".buscaprecio").click(function () {
        var cliente = $('#pedido_cliente').val();
        if(cliente == '') {
			alert('Debe introducir un cliente');
         } else {
        	 $.prettyPhoto.open('{{ path('buscador_precio', { 'id': ''}) }}/'+cliente+'?/iframe=true&width=1080&height=600','Buscador de Precios','Listado de precios de cliente');
         }
        return;
    })
});
         </script>
<div id="pedido-form">
<div class="portlet ui-widget ui-widget-content ui-helper-clearfix ui-corner-all form-container container-sin-header">
		<form action="{{ entity.id  ? path('pedidocliente_update', { 'id': entity.id }) : path('pedidocliente_create') }}" method="post" {{ form_enctype(form) }}>
			<div class="form-invoice">
				<div class="span-16 form-horizontal label-column-small form-condensed">
					<div class="control-group">
						{{ form_label(form.cliente, null, { 'label': ' Cliente', 'label_attr': {'class': 'control-label'} }) }}
						<div class="controls">
			    			{{ form_widget(form.cliente, { 'attr': {'class': 'small buscadorid'}}) }}
			    			<a rel="prettyPhoto[iframe]" href="{{ path('buscador_cliente', { 'id': entity.id , 'iframe': 'true', 'width': 650, 'height': 400 }) }}" title="Buscador de CLIENTES"><img src="{{ asset('images/search.png') }}" /></a>
		        		</div>
	     			</div>
	     			<div class="control-group-pedido">
	     			      <label class="control-label">&nbsp;</label> 
	     			      <div class="controls nombre-cliente" style="display:none;"><h2>Nombre de cliente</h2></div>
	     			</div>
     			</div>
     			<div class="span-19 form-horizontal label-column-small form-condensed">
					<div class="control-group required">
						<div style="width:150px;float:left;">   
						   <label class="control-label required">Código Pedido</label>
							<div class="controls codigo">
				    					{{ entity.id }}
			        		</div>
			        	</div>
			        	<div style="width:220px;float:left;">
			        		{{ form_label(form.estado, null, { 'label': 'Estado', 'label_attr': {'class': 'control-label'} }) }}
								<div class="controls codigo">
			    				{{ form_widget(form.estado, { 'attr': {'class': 'small'}}) }}
			        			</div>
			        	</div>
	     			</div>
     			</div>
      			<div class="span-16 form-horizontal label-column-small form-condensed">
	     			<div class="control-group required">
						{{ form_label(form.fecha, null, { 'label': 'Fecha', 'label_attr': {'class': 'control-label'} }) }}
						<div class="controls">
			    			{{ form_widget(form.fecha, { 'attr': {'class': 'date small'}}) }}
		        		</div>
	     			</div>
     			</div>
     			<div class="clearfix"></div>
     			<div class="span-16 form-horizontal label-column-small form-condensed">
	     			<label class="control-label required">Comercial</label>
						
			        		<div class="controls nombre-comercial" style="display:none;">			
		        		</div>
	     			</div>

     			<div class="span-17 form-horizontal label-column-small form-condensed">
     		    	<div class="control-group required">
						{{ form_label(form.subcliente, null, { 'label': 'Subcliente', 'label_attr': {'class': 'control-label'} }) }}
						<div class="controls">
			    			{{ form_widget(form.subcliente, { 'attr': {'class': ''}}) }}
		        		</div>
	     			</div>	
     			</div>
     			<div class="span-16 form-horizontal label-column-small form-condensed">
	     			<div class="control-group required">
						{{ form_label(form.precio, null, { 'label': 'Precio', 'label_attr': {'class': 'control-label'} }) }}
						<div class="controls">
			    			{{ form_widget(form.precio, { 'attr': {'class': 'small iprecio numeric'}}) }}
			    			<a href="#" class="buscaprecio"><img src="{{ asset('images/search.png') }}" /></a>
			    			<!-- <a rel="prettyPhoto[iframe]" href="{{ path('buscador_precio', { 'id': entity.id , 'iframe': 'true', 'width': 750, 'height': 600 }) }}" title="Buscador de Precios"> </a> -->
		        		</div>
	     			</div>
     			</div>
 			</div>
		</div>
      <div id="datos-pedido">
		<table cellspacing="0" cellpadding="0" class="tabla5 tabla5-form">
           	  <tbody><tr>
                   	  <th>Cantidad</th><th>Ancho</th><th>Largo</th><th>Galga</th><th>Plegado</th>
                  </tr>
               	  <tr>
               	  	  <td>{{ form_widget(form.cantidad, { 'attr': {'class': 'small'}}) }}</td>
               	  	  <td>{{ form_widget(form.ancho, { 'attr': {'class': 'small'}}) }}</td>
               	  	  <td>{{ form_widget(form.largo, { 'attr': {'class': 'small'}}) }}</td>
               	  	  <td>{{ form_widget(form.galga, { 'attr': {'class': 'small'}}) }}</td>
               	  	  <td>{{ form_widget(form.plegado, { 'attr': {'class': 'small'}}) }}</td>
               	  </tr>         
           </tbody>
         </table>
         <table cellspacing="0" cellpadding="0" class="tabla5 tabla5-form">
           	  <tbody><tr>
                   	  <th rowspan="2">Material</th><th rowspan="2">Color</th><th rowspan="2">Tubo</th><th rowspan="2">Bolsa</th><th colspan="3">Bobinas</th>
                  </tr>
               	  <tr>
               	  	  <th>Nº bobinas</th><th>M Bobina</th><th>Kg. Bobinas</th>
               	  </tr>
               	  <tr>
               	  	  <td></td><td></td><td></td><td></td><td></td><td></td><td></td>
               	  </tr>         
           </tbody>
         <table cellspacing="0" cellpadding="0" class="tabla5">
           	  <tbody>
           	      <tr>
           	      	<th colspan="4">Impresión</th><th rowspan="2">Cliche</th>
           	      </tr>
           	      <tr>
                   	  <th>Anverso</th><th>Reverso</th><th>Anverso</th><th>Reverso</th>
                  </tr>
               	  <tr>
               	  	  <td></td><td></td><td></td><td></td><td></td>
               	  </tr>         
           </tbody>
         </table>
	  </div><!-- datos-pedido -->
	<div class="clearfix"></div> <BR />

	<div class="guardar"><button type="submit" class="ui-state-default ui-corner-all">Guardar</button></div> 
		{{ form_widget(form._token) }}</form>
</div>