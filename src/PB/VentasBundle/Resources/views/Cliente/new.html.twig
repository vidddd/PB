{% extends '::base.html.twig' %}
{% form_theme form 'PBInicioBundle:Form:fields.html.twig' %}

{% block content %}
<div class="title title-spacing">
					<h2>Nuevo Cliente</h2>
</div>
<form action="{{ path('cliente_create') }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">
<div class="portlet ui-widget ui-widget-content ui-helper-clearfix ui-corner-all form-container">
	<div class="portlet-header ui-widget-header">Nuevo Cliente</div>
		{{ form_errors(form) }}
		<div class="portlet-content">
		    <div id="tabs2" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
		<table id="form-alta">
   <tbody>
     <tr><td colspan="3" class="grupo-campos">Datos Principales</td></tr>
     <tr>
        <td class="label">{{ form_label(form.nombre) }}</td>
        <td class="campo">{{ form_widget(form.nombre, { 'attr': {'class': 'foo'} }) }}</td>
        <td class="errores">{{ form_errors(form.nombre) }}</td>
	 </td>
      </tr>
      <tr>
        <td>{{ form_label(form.nombrecomercial, 'Nombre Comercial') }}</td>
        <td>{{ form_widget(form.nombrecomercial) }}</td><td>{{ form_errors(form.nombrecomercial) }}</td>
      </tr>
      <tr>
        <td>{{ form_label(form.nif, 'NIF') }}</td>
        <td>{{ form_widget(form.nif) }}</td><td>{{ form_errors(form.nif) }}</td>
      </tr>
      <tr>
        <td>{{ form_label(form.direccion, 'Direccion') }}</td>
        <td>{{ form_widget(form.direccion) }}</td><td>{{ form_errors(form.direccion) }}</td>
      </tr>
      <tr>
        <td>{{ form_label(form.cp, 'Codigo postal') }}</td>
        <td>{{ form_widget(form.cp, { 'attr': {'class': 'small'}}) }}</td><td>{{ form_errors(form.cp) }}</td>
      </tr>
	  <tr>
        <td>{{ form_label(form.localidad) }}</td>
        <td>{{ form_widget(form.localidad) }}</td><td>{{ form_errors(form.localidad) }}</td>
      </tr>
	  <tr>
        <td>{{ form_label(form.codprovincia, 'Provincia') }}</td>
        <td>{{ form_widget(form.codprovincia) }}</td><td>{{ form_errors(form.codprovincia) }}</td>
