      </tr> 
      <tr>
        <td>{{ form_label(form.telefono) }}</td>
        <td>{{ form_widget(form.telefono) }}</td><td>{{ form_errors(form.telefono) }}</td>
      </tr>
      <tr>
        <td>{{ form_label(form.fax) }}</td>
        <td>{{ form_widget(form.fax) }}</td><td>{{ form_errors(form.fax) }}</td>
      </tr>
      <tr>
        <td>{{ form_label(form.cuenta, 'Cuenta Bancaria') }}</td>
        <td>{{ form_widget(form.cuenta) }}</td><td>{{ form_errors(form.cuenta) }}</td>
      </tr>
      <tr>
        <td>{{ form_label(form.descuento) }}</td>
        <td>{{ form_widget(form.descuento) }}</td><td>{{ form_errors(form.descuento) }}</td>
      </tr>
      <tr>
        <td>{{ form_label(form.recargo) }}</td>
        <td>{{ form_widget(form.recargo) }}</td><td>{{ form_errors(form.recargo) }}</td>
      </tr>
      <tr>
        <td>{{ form_label(form.codfp, 'Forma de pago') }}</td>
        <td>{{ form_widget(form.codfp) }}</td><td>{{ form_errors(form.codfp) }}</td>
      </tr>
       <tr>
        <td>{{ form_label(form.observaciones) }}</td>
        <td>{{ form_widget(form.observaciones, { 'attr': {'cols': '30', 'rows': '7'} }) }}</td><td>{{ form_errors(form.observaciones) }}</td>
      </tr> 
        </tbody>
     </table>  </div>
<div class="guardar">
       <input type="submit" class="submit" value="Guardar" />
    </div> 
{{ form_widget(form._token) }}</form>
		</div></div>
<ul class="record_actions">
    <li>
        <a href="{{ path('cliente') }}">
            Back to tde list
        </a>
    </li>
</ul>
{%  endblock %}
