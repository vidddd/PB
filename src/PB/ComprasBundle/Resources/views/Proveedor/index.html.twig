{% extends '::base.html.twig' %}

{% block content %}

<div class="title title-spacing">
					<h2>Proveedores</h2>
</div>
<div class="btn-nuevo">
<a class="btn ui-state-default ui-corner-all" href="{{ path('proveedor_new') }}"><span class="ui-icon ui-icon-plusthick"></span>Nuevo Proveedor</a></div>
<div class="clearfix"></div>

<div class="hastable">
<table class="records_list" id="sort-table">
    <thead>
        <tr>
            <th style="width:50px;" class="header">Id</th>
            <th class="header">Nombre</th>
            <th class="header">Nombrecomercial</th>
            <th class="header">Provincia</th>
            <th class="header">Localidad</th>
            <th style="width:72px">Operaciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('proveedor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.nombrecomercial }}</td>
            <td>{{ entity.provincia }}</td>
            <td>{{ entity.localidad }}</td>
            <td>
				<a href="{{ path('proveedor_edit', { 'id': entity.id }) }}" class="btn_no_text btn ui-state-default ui-corner-all tooltip"><span class="ui-icon ui-icon-wrench"></span></a>
		        <a href="" class="btn_no_text btn ui-state-default ui-corner-all tooltip"> <span class="ui-icon ui-icon-circle-close"></span> </a>
		   </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
