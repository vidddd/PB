{% extends '::base.html.twig' %}

{% block title "Proveedores" %}

{% block content %}

<div class="row">

 <div class="title title-spacing">
					<h2>Proveedores</h2>
</div>
    <div class="span2">
        {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="portlet form-bg ui-widget ui-widget-content ui-helper-clearfix ui-corner-all"><div class="portlet-header ui-widget-header">Filtros</div>
    <div class="portlet-content">
		<form class="well" action="{{ path('proveedor') }}" method="post" {{ form_enctype(filterForm) }} novalidate="novalidate">
			<table id="form-alta">
   				<tbody>		
         			<tr>
        				<td class="label">{{ form_label(filterForm.id, 'Codigo Proveedor') }}</td>
        				<td class="campo">{{ form_widget(filterForm.id, { 'attr': {'class': 'small'}}) }}</td><td>{{ form_errors(filterForm.id) }}</td>
      				<tr>
      				<tr>
        				<td class="label">{{ form_label(filterForm.nombre, 'Nombre') }}</td>
        				<td class="campo">{{ form_widget(filterForm.nombre) }}</td><td>{{ form_errors(filterForm.nombre) }}</td>
      				<tr>
      				<tr>
        				<td class="label">{{ form_label(filterForm.nif, 'NIF') }}</td>
        				<td class="campo">{{ form_widget(filterForm.nif) }}</td><td>{{ form_errors(filterForm.nif) }}</td>
      				<tr>
      	         	<tr>
        				<td class="label">{{ form_label(filterForm.cp, 'C—digo Postal') }}</td>
        				<td class="campo">{{ form_widget(filterForm.cp, { 'attr': {'class': 'small'}}) }}</td><td>{{ form_errors(filterForm.cp) }}</td>
      				<tr>
               		<tr>
        				<td class="label">{{ form_label(filterForm.localidad, 'Localidad') }}</td>
        				<td class="campo">{{ form_widget(filterForm.localidad) }}</td><td>{{ form_errors(filterForm.localidad) }}</td>
      				<tr> 
            </tbody></table>
                <p>
                    <button type="submit" name="filter_action" value="reset" class="ui-state-default ui-corner-all">Limpiar</button>
                    <button type="submit" name="filter_action" value="filter" class="ui-state-default ui-corner-all">filtrar</button>
                </p>
			 {{ form_widget(filterForm._token) }}</form>
	</div>
</div>
    

    <div class="span12">

    <table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Nombrecomercial</th>
            <th>Nif</th>
            <th>Nombrecontacto</th>
            <th>Telefono_contacto</th>
            <th>Email_contacto</th>
            <th>Telefono</th>
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('proveedor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.nombrecomercial }}</td>
            <td>{{ entity.nif }}</td>
            <td>{{ entity.nombrecontacto }}</td>
            <td>{{ entity.telefonocontacto }}</td>
            <td>{{ entity.emailcontacto }}</td>
            <td>{{ entity.telefono }}</td>
            <td>
        <a class="btn btn-mini" href="{{ path('proveedor_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('proveedor_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>

    <div class="span4">
    {{ pagerHtml|raw }}
    </div>

        <div class="span8">
    <a class="btn likepaginator" href="{{ path('proveedor_new') }}">
            {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Proveedor
        </a>
    </div>
</div>

{% endblock %}