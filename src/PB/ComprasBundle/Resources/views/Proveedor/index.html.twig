{% extends '::base.html.twig' %}

{% block title "Proveedores" %}

{% block content %}

<div class="row">

 <div class="title title-spacing">
					<h2>Proveedores</h2>
</div>
    <div class="span2">
        {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="portlet form-bg ui-widget ui-widget-content ui-helper-clearfix ui-corner-all"><div class="portlet-header ui-widget-header">Filtros</div>
    <div class="portlet-content">
		<form class="well" action="{{ path('proveedor') }}" method="post" {{ form_enctype(filterForm) }}>
			<table id="form-alta">
   				<tbody>		
   				  <tr>
        <td class="label"><label for="clientesearch_codcliente">Codigo de cliente</label></td>
        <td class="campo"><input type="text" class="small" name="clientesearch[codcliente]" id="clientesearch_codcliente"></td>
      </tr>
      <tr>
        <td>{{ form_row(filterForm.id) }}
                {{ form_row(filterForm.nombre) }}
                {{ form_row(filterForm.nif) }}
                {{ form_row(filterForm.telefono) }}
                {{ form_row(filterForm.cp) }}
                {{ form_row(filterForm.localidad) }}
                {{ form_row(filterForm.provincia) }}
                {{ form_widget(filterForm._token) }}
      </td></tr>
    			  
		<tr><td>
											<button type="submit" value="Submit" class="ui-state-default ui-corner-all" id="saveForm">Buscar</button>
										</td>
									</tr>
            </tbody></table>
                            <p>
                    <button type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    <button type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                </p>
			</form>
	</div>
</div>
    

    <div class="span12">

    <table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Nombrecomercial</th>
            <th>Nif</th>
            <th>Nombrecontacto</th>
            <th>Telefono_contacto</th>
            <th>Email_contacto</th>
            <th>Telefono</th>
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('proveedor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.nombrecomercial }}</td>
            <td>{{ entity.nif }}</td>
            <td>{{ entity.nombrecontacto }}</td>
            <td>{{ entity.telefonocontacto }}</td>
            <td>{{ entity.emailcontacto }}</td>
            <td>{{ entity.telefono }}</td>
            <td>
        <a class="btn btn-mini" href="{{ path('proveedor_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('proveedor_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>

    <div class="span4">
    {{ pagerHtml|raw }}
    </div>

        <div class="span8">
    <a class="btn likepaginator" href="{{ path('proveedor_new') }}">
            {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Proveedor
        </a>
    </div>
</div>

{% endblock %}