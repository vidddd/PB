</div>

  <div class="portlet ui-widget ui-widget-content ui-helper-clearfix ui-corner-all form-container">
		<div class="portlet-content show">

    <div id="tabs2" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
		<ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
			<li class="ui-state-default ui-corner-top"><a href="#tabs-1">Datos Principales</a></li>
		    <li class="ui-state-default ui-corner-top"><a href="#tabs-2">Datos de contacto</a></li>
			<li class="ui-state-default ui-corner-top"><a href="#tabs-3">Contabilidad</a></li>
			<li class="ui-state-default ui-corner-top"><a href="#tabs-4">Observaciones</a></li>
		</ul>
    <div id="tabs-1">
    <table>
   <tbody>
     <tr>
        <td class="label">Nombre</td><td class="campo">{{ entity.nombre }}</td>
      </tr>
      <tr>
        <td>Nombre Comercial</td><td>{{ entity.nombrecomercial }}</td>
      </tr>
      <tr>
        <td>NIF</td><td>{{ entity.nif }}</td>
      </tr>
      <tr>
        <td>Direccion</td><td>{{ entity.direccion }}</td>
      </tr>
      <tr>
