     </tbody></table>
	</div>
	<div id="tabs-4">
		<table>
			<tbody>
			   <tr> <td class="label">Observaciones</td><td class="campo">{{ entity.observaciones }}</td>
		            </td></tr>
			</tbody>
		</table>
	</div>
</div></div> </div>


<div>
    <div class="float-left">
        <a class="btn" href="{{ path('proveedor') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn" href="{{ path('proveedor_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('proveedor_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>

{% endblock %}