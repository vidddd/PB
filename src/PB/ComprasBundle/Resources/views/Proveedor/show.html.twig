	  <tr>
        <td>Medio Envio</td><td>{{ entity.medioenvio }}</td>
	  </tr>
    </tbody>
   </table>  
    </div>
	<div id="tabs-2">
	  <table>
   		<tbody>
   			 <tr>
        		<td class="label">Teléfono</td><td class="campo">{{ entity.telefono }}</td>
