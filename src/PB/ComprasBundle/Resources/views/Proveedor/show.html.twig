		      </tr>
		      <tr>
        		<td>Email</td><td>{{ entity.email }}</td>
		      </tr>
		      		      <tr>
        		<td>Web</td><td>{{ entity.web }}</td>
		      </tr>
		      <tr>
                <td>Nombre de Contacto</td><td>{{ entity.nombrecontacto }}</td>
		      </tr>
		      <tr>
        		<td>Teléfono de Contacto</td><td>{{  entity.Telefonocontacto }}</td>
		      </tr>
		      <tr>
        		<td>Email de Contacto</td><td>{{ entity.emailcontacto }}</td>
		      </tr>
        </tbody>
     </table>
	</div>
	<div id="tabs-3">
	   <table>
   		<tbody>
     		<tr>
        		<td class="label">Paga IVA</td><td class="campo">{{  entity.pagaiva }}</td>
