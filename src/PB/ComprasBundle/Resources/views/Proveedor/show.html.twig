		     </tr>
		     <tr>
        		<td>Paga IRPF</td><td>{{ entity.irpf }}</td>
		      </tr>
		      <tr>
                <td>Forma de Pago</td><td>{{ entity.formapagoproveedor }}</td>
		      </tr>
		      <tr>
        		<td>Cuenta Bancaria</td><td>{{ entity.cuentabancaria }}</td>
		      </tr>
		      <tr>
