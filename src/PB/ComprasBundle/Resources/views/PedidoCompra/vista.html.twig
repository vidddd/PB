<div id="pedido-compra-ver">
	<div class="span-18" style="margin-right:20px;">
		<table id="tabla1">
		<tr>
			<td style="width:30%;" class="label3">PROVEEDOR</td>
			<td style="width:300px">{{ entity.proveedor.nombre }}</td>
		</tr>
		<tr>
			<td class="label3">DIRECCIÓN</td>
			<td colspan="3">{{ entity.proveedor.direccion }}</td>
		</tr>
		<tr>
			<td class="label3">TELÉFONO</td>
			<td> {{ entity.proveedor.telefono }}</td>
		</tr>
		<tr>
			<td class="label3">LOCALIDAD</td>
			<td>{{ entity.proveedor.localidad }}</td>
		</tr> 
		</table>
	</div>
	<div class="span-18">
		<table id="tabla2">
		<tr>
			<td style="width:35%;" class="label3">Nª PEDIDO</td>
			<td style="width:300px">{{ entity.id }}</td>
		</tr>
		<tr>
			<td class="label3">FECHA</td>
			<td colspan="3">{{ entity.fecha| date('d/mY') }}</td>
		</tr>
		<tr>
			<td class="label3">FECHA ENTREGA</td>
			<td> {{ entity.fechaentrega | date('d/mY') }}</td>
		</tr>
		<tr>
			<td class="label3">FORMA ENVIO</td>
			<td>{{ entity.formaenvio }}</td>
		</tr> 
		</table>
	</div>
	<div class="clearfix"></div>

	<table id="cab-lineas">
		<tr>
			<td style="width:10%" class="label3">REF</td>
			<td style="width:50%" class="label3">DESCRIPCION</td>
			<td style="width:10%" class="label3">UDS</td>
			<td style="width:10%" class="label3">PRECIO</td>
			<td style="width:10%" class="label3">% DTO</td>
			<td style="width:10%" class="label3">TOTAL</td>
		</tr>
	</table>
	<table id="lineas">
	{% for linea in entity.pedidocompralineas %}
        <tr>
            <td style="width:10%" class="ta_right">{{ linea.referencia }}</td>
            <td style="width:50%">{{ linea.descripcion }}</td>
            <td style="width:10%" class="ta_right">{{ linea.cantidad }}</td>
            <td style="width:10%" class="ta_right">{{ linea.precio }}</td>
            <td style="width:10%" class="ta_right">{{ linea.descuento }}</td>
            <td style="width:10%" class="ta_right">{{ linea.total }}</td>
        </tr>
    {% endfor %}
	</table>
	<table id="sub-lineas">
		<tr>
			<td style="width:18%" class="label3">NETO</td>
			<td style="width:18%" class="label3">DTO %</td>
			<td style="width:22%" class="label3">BASE IMPONIBLE</td>
			<td style="width:22%" class="label3">IVA 21%</td>
			<td style="width:22%" class="label3">TOTAL</td>
		</tr>
		<tr>
			<td class="last ta_right">{{ entity.importe }}€</td>
			<td class="last ta_right"></td>
			<td class="last ta_right">{{ entity.importe }}€</td>
			<td class="last ta_right">{{ entity.iva }}</td>
			<td class="last ta_right"><b>{{ entity.total }}€</b></td>
		</tr>
		</table>
	<table id="firma">
		<tr>
			<td style="width:240px;" class="etiqueta bgcolor">FECHA DE ENTREGA:</td>
			<td>{{ entity.fechaentrega|date('d / m / Y') }}</td>
		</tr>
		<tr>
			<td class="etiqueta bgcolor">LUGAR DE ENTREGA:</td>
			<td>{{ entity.referencia }}</td>
		</tr>
		<tr>
			<td class="etiqueta bgcolor">FORMA DE ENVIO</td>
			<td class="">{{ entity.formaenvio }}</td>
		</tr>
		<tr>
			<td colspan="2" style="padding:0;">
			<table id="dentro"><tr>
				<td style="width:80% height:300px;"></td>
				<td class="bgcolor"></td>
			</tr>
			</table>
			 </td>
		</tr>
	</table>
</div>