{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Almacen {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Almacen</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Referencia</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.referencia }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Descripcion</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.descripcion }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Cantidad</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.cantidad }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Paquete</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.paquete }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Serie</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.serie }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Fecha_entrada</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.fechaentrada|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Ancho</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.ancho }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Largo</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.largo }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Galga</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.galga }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('almacen') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('almacen_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('almacen_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}